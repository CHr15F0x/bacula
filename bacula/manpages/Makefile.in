#
#
@MCOMMON@

.PHONY: dummy

MAN8 = bacula.8 bacula-dir.8 bacula-fd.8 bacula-sd.8 \
       bconsole.8 bcopy.8 bextract.8 bls.8 bscan.8 btape.8 \
       btraceback.8 dbcheck.8

MAN1 = bacula-tray-monitor.1 bacula-bwxconsole.1 bsmtp.1 bat.1
      
# bacula-bgnome-console.1

all:

nothing:

depend:

compress-manpages: install-manpages

install-manpages:
	$(MKDIR) $(DESTDIR)/$(mandir)/man8 $(DESTDIR)/$(mandir)/man1
	for I in ${MAN8}; do \
	     $(INSTALL_DATA) $$I $(DESTDIR)$(mandir)/man8/$$I; \
	done
	for I in ${MAN1}; do \
	     $(INSTALL_DATA) $$I $(DESTDIR)$(mandir)/man1/$$I; \
	done

install: install-manpages
	if [ x@COMPRESS_MANPAGES@ = "xyes" ]; then \
	 for I in $(DESTDIR)/$(mandir)/man8/* $(DESTDIR)/$(mandir)/man1/*; do \
	  gzip $$I; \
	 done; \
	fi

uninstall:
	for I in ${MAN8}; \
	  do (rm -f $(DESTDIR)$(mandir)/man8/$$I.gz; \
		rm -f $(DESTDIR)$(mandir)/man8/$$I); \
	done
	for I in ${MAN1}; \
	  do (rm -f $(DESTDIR)$(mandir)/man1/$$I.gz; \
		rm -f $(DESTDIR)$(mandir)/man1/$$I); \
	done

clean:
	@$(RMF) *~ 1 2 3 *.bak
	@find . -name .#* -exec $(RMF) {} \;

depend:      

distclean: clean
	$(RMF) Makefile
