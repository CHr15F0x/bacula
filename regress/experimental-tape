#!/bin/sh
#
# test only the disk based regression scripts
#
# Include full output
echo "Begin experimental-tape `date`"
save_debug=${REGRESS_DEBUG}
REGRESS_DEBUG=1
export REGRESS_DEBUG
svn update
scripts/config_dart
nice ctest -D Experimental -R "^tape:"
if [ $? != 0 ] ; then
   echo "ctest failed re-running Submit"
   ctest -D ExperimentalSubmit
   if [ $? != 0 ] ; then
      echo "Submit failed, waiting 5 mins"
      sleep 300
      echo "ctest failed re-running Submit a second time"
      ctest -D ExperimentalSubmit
   fi
fi
REGRESS_DEBUG=${save_debug}
echo "End experimental-tape `date`"
