#!/bin/sh
#
# This is the configuration script for regression testing
#

CFLAGS="-g -O2 -Wall" \
 ./configure \
    --sbindir=$1/bin \
    --sysconfdir=$1/bin \
    --with-pid-dir=$1/working \
    --with-subsys-dir=$1/working \
    --enable-smartalloc \
    --disable-readline \
    $4 \
    --with-working-dir=$1/working \
    --with-dump-email=$3 \
    --with-job-email=$3 \
    --with-baseport=8101 \
	--with-tcp-wrappers

exit 0
